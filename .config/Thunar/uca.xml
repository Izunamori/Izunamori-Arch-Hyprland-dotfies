	<submenu></submenu>
	<unique-id>1752600130033249-1</unique-id>
	<command>bash -c &apos;mkdir -p ~/.local/share/applications &amp;&amp; f=~/.local/share/applications/%n.desktop &amp;&amp; echo -e &quot;[Desktop Entry]\nName=%n\nExec=%f\nIcon=application-x-executable\nType=Application\nTerminal=false\nCategories=Utility;&quot; &gt; &quot;$f&quot; &amp;&amp; chmod +x &quot;$f&quot; &amp;&amp; code &quot;$f&quot;&apos;</command>
